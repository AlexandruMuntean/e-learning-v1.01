@model E_LearningApplication.Models.ViewModels.GroupsViewModel

<div class="form-panel">
    <h2><i class="fa fa-angle-right"></i> Create Group</h2>

    <div class="panel panel-body">
        <div class="panel-default">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                
                <div class="editor-label">
                    @Html.LabelFor(model => model.GroupName)
                </div>
                <div class="editor-field mb">
                    @Html.EditorFor(model => model.GroupName)
                    @Html.ValidationMessageFor(model => model.GroupName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.GroupDescription)
                </div>
                <div class="editor-field mb">
                    @Html.EditorFor(model => model.GroupDescription)
                    @Html.ValidationMessageFor(model => model.GroupDescription)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.GroupType)
                </div>
                <div class="editor-field mb">
                    @Html.EditorFor(model => model.GroupType)
                    @Html.ValidationMessageFor(model => model.GroupType)
                </div>

                <p>
                    <input type="submit" class="btn btn-primary btn-sm" value="Create" />
                </p>
            }
        </div>
    </div>
</div>
