@model IEnumerable<E_LearningApplication.Models.ViewModels.GroupsViewModel>

<div class="form-panel">
    <h2><i class="fa fa-angle-right"></i> Display My Groups</h2>

    <div class="panel panel-body panel-default">
        <p>
            @Html.ActionLink("Show all my groups", "DisplayAssociatedGroups", "Groups")
        </p>

        <div class="mt">
            @using (Html.BeginForm("SearchAssociatedGroups", "Groups", FormMethod.Get)) {

                <h5><i class="fa fa-search"></i> Search by</h5>
                <input type="text" name="searchString">
                <input type="submit" value="Search" class="btn btn-theme03 btn-xs" />
            }

        </div>
    </div>

    <div class="panel panel-body panel-default">
        <button type="button" class="btn btn-default">
            <span class="fa fa-plus-circle"></span>
            @Html.ActionLink("Create New Group", "CreateGroup")
        </button>

        <table class="table table-striped table-hover mt">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GroupName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupType)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupType)
                    </td>
                    <td>
                        @Html.ActionLink("More...", "GroupDetails", new { id = item.GroupId }) |
                        @using (Html.BeginForm("UnsubscribeFromGroup", "Groups", new { groupId = item.GroupId }, FormMethod.Post, new { title = "Unsubscribe from the group" })) {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(modelItem => item.GroupId)
                            <button type="submit" class="btn btn-warning btn-xs">
                                <i class="fa fa-trash-o"></i> Unsubscribe
                            </button>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

