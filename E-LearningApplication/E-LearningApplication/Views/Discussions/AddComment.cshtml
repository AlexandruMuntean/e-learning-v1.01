@model E_LearningApplication.Models.ViewModels.MessagesViewModel

<div class="form-panel">
    <h2><i class="fa fa-angle-right"></i> Add Comment</h2>

    <div class="panel panel-body panel-default">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="editor-label">
                @Html.LabelFor(model => model.MessageContent)
            </div>
            <div class="editor-field mb">
                @Html.TextAreaFor(model => model.MessageContent)
                @Html.ValidationMessageFor(model => model.MessageContent)
            </div>

            <p>
                <input type="submit" class="btn btn-primary btn-sm" value="Post" />
            </p>
        }
    </div>
</div>