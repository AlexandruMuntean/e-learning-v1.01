@model E_LearningApplication.Models.ViewModels.MailViewModel

<div class="form-panel">
    <h2><i class="fa fa-angle-right"></i> Compose Mail</h2>

    <div class="panel panel-body">
        @using (Html.BeginForm("SendMail", "Discussions", FormMethod.Post)) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

                @*<div class="form-group">
                    @Html.LabelFor(model => model.Sender)
                    <br/>
                    @Html.TextBoxFor(model => model.Sender, new { @class= "form-control" })
                    @Html.ValidationMessageFor(model => model.Sender)
                </div>*@

                <div class="form-group">
                    @Html.LabelFor(model => model.Receivers)
                    <br />
                    @Html.TextBoxFor(model => model.Receivers, new { @class = "form-control", title = "Enter the recipient. If more than one recipient, please separate them by a semicolon!" })
                    @Html.ValidationMessageFor(model => model.Receivers)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MailSubject)
                    <br />
                    @Html.TextBoxFor(model => model.MailSubject, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MailSubject)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MailBody)
                    <br />
                    @Html.TextAreaFor(model => model.MailBody, new { @class = "form-control", @rows="5" })
                    @Html.ValidationMessageFor(model => model.MailBody)
                </div>

                <p>
                    <input type="submit" value="Send Mail" class="btn btn-primary" />
                </p>
        }
    </div>

</div>