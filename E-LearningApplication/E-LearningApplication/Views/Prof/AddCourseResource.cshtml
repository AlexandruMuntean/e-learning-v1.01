@model Int32

<div>
    <div class="col-lg-3"></div>
    <div class="form-panel col-lg-6">
        <h2><i class="fa fa-angle-right"></i> Add Course Resource</h2>

        <div class="panel panel-body panel-default">
            @using (Html.BeginForm("UploadResourcesforCourse", "Prof", new { id = Model }, FormMethod.Post, new { enctype = "multipart/form-data" })) {
                <div class="mb">
                    <label>Choose a course resource to load:</label>
                    <input type="file" name="file" class="btn btn-info" />
                </div>
                <div>
                    <input type="submit" name="submit" value="Upload" class="btn btn-facebook btn-sm" />
                </div>
            }
        </div>

    </div>
    <div class="col-lg-3"></div>
</div>