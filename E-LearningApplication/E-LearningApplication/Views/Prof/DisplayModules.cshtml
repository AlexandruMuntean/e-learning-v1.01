@model IEnumerable<E_LearningApplication.Models.ViewModels.CourseModuleViewModel>

<div class="form-panel">
    <h2><i class="fa fa-angle-right"></i> Display Course Modules</h2>

    <div class="panel panel-body panel-default">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ModuleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Moduledatetime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PreviousModuleId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseId)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModuleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Moduledatetime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PreviousModuleId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseId)
                    </td>
                    <td>
                        @Html.ActionLink("More...", "ModuleDetails", new { id = item.ModuleId })
                    </td>
                </tr>
            }
        </table>

    </div>
    <div>
        <button type="button" class="btn btn-link mt">
            <h4>
                <i class="fa fa-arrow-left"></i>
                @Html.ActionLink("Back to Courses List", "DisplayCourses")
            </h4>
        </button>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
