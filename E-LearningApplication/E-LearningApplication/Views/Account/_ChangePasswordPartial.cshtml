@model E_LearningApplication.Models.LocalPasswordModel

<style>
    .manage.message-error {
        color: #e80c4d;
    }
</style>

<h3 class="mb">Change password</h3>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal style-form" })) {
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-5">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control round-form" })
            <p class="manage message-error">
                @Html.ValidationMessageFor(m => m.OldPassword)
            </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-5">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control round-form" })
            <p class="manage message-error">
                @Html.ValidationMessageFor(m => m.NewPassword)
            </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-5">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control round-form" })
            <p class="manage message-error">
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </p>
        </div>
    </div>
    <input type="submit" value="Change password" class="btn btn-facebook" />
}