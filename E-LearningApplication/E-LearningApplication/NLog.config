<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwExceptions="true"
      internalLogLevel="Trace"
      internalLogFile="..\..\..\Logs\nlog-app.log">
  <!-- 
  See http://nlog-project.org/wiki/Configuration_file 
  for information on customizing logging rules and outputs.
   -->

  <!--<extensions>
    <add assembly="NLog.Extended" />
  </extensions>-->

  <targets>
    <!-- file targets -->
    <target name="asyncFile" xsi:type="AsyncWrapper">
      <target xsi:type="File" name="f" fileName="${basedir}/Logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}"/>
    </target>


    <!--inlocuiti connection string-ul din target-ul database cu acesta; completati data source=servername -->
    <!--connectionString="Server=tcp:avd4oxre77.database.windows.net,1433;Database=ELearningDatabase;User ID=gr234@avd4oxre77;Password=Elearning2015;Trusted_Connection=False;Encrypt=True;Connection Timeout=30;"-->

    <!-- database targets -->
    <target name="database" xsi:type="Database"
              dbProvider="System.Data.SqlClient"
            connectionString="data source=LILI-PC\SQLEXPRESS;initial catalog=ELearningDatabase;Integrated Security=True;MultipleActiveResultSets=True;App=EntityFramework"
              commandText="INSERT INTO Logs(EventDateTime, EventLevel, EventInfo) VALUES(@EventDateTime, @EventLevel, @EventInfo)">
      <!-- parameters for the command -->
      <parameter name="@EventDateTime" layout="${date:s}" />
      <parameter name="@EventLevel" layout="${level}" />
      <parameter name="@EventInfo" layout="${message}" />
    </target>
  </targets>

  <rules>
    <!-- add your logging rules here -->
    <logger name="*" minlevel="Trace" writeTo="database" />
  </rules>
</nlog>
