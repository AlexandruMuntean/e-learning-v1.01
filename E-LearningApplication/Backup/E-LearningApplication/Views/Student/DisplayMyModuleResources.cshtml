@model IEnumerable<E_LearningApplication.Models.ViewModels.ResourceViewModel>
<div class="form-panel">
    <h2><i class="fa fa-angle-right"></i> Display Module Resources</h2>
    <div class="panel panel-body panel-default">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <button class="btn btn-info btn-xs" title="Download course resources">
                            <i class="fa fa-arrow-down"></i>
                            @Html.ActionLink("Download", "DowloadCourseResource", "Prof", new { id = item.ResourceId }, new { title = "Download resource" })
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div>
        <button type="button" class="btn btn-link mt">
            <i class="fa fa-arrow-left"></i>
            @Html.ActionLink("Back to Courses List", "DisplayMyCourses")
        </button>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
