@model E_LearningApplication.Models.ViewModels.CoursesViewModel

<div class="form-panel">
    <h2><i class="fa fa-angle-right"></i> Course Details</h2>

    <div class="panel panel-body panel-default">
        @Html.HiddenFor(model => model.CourseId)
        @Html.HiddenFor(model => model.OwnerId)

        <div class="col-lg-6">
            <div class="row mb">
                <div class="display-label">
                    @Html.DisplayNameFor(model => model.CourseName)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.CourseName)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.CourdeCode)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.CourdeCode)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.NumberOfCredits)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.NumberOfCredits)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.SyllabusId)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.SyllabusId)
                </div>
            </div>

        </div>
        <div class="col-lg-6">
            <div class="row mb">
                <button class="btn btn-theme03 btn-xs" title="Display course module">
                    <i class="fa fa-folder-open"></i>
                    @Html.ActionLink("Display Course Modules", "DisplayMyModules", "Student", new { id = Model.CourseId }, new { title = "View course modules"})
                </button>
            </div>

            <div class="row mb">
                <button class="btn btn-theme btn-xs" title="Display course resources">
                    <span class="fa fa-folder-o"></span>
                    @Html.ActionLink("Display Course Resources", "DisplayMyCourseResources", "Student", new { id = Model.CourseId }, new { title = "View course resources"})
                </button>
            </div>

        </div>
    </div>

    <div>
        <button type="button" class="btn btn-link mt">
            <i class="fa fa-arrow-left"></i>
            @Html.ActionLink("Back to Courses List", "DisplayMyCourses")
        </button>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
